{
  "name": "trillo",
  "version": "2.0.0",
  "description": "Pure flexbox website",
  "main": "index.html",
  "scripts": {
    "watch": "node-sass --watch sass/main.scss css/style.css --output-style nested",
    "live-server": "live-server",
    "dev": "npm-run-all --parallel live-server watch",
    "compile": "node-sass sass/main.scss css/style.comp.css",
    "concat": "concat -o css/style.concat.css css/style.comp.css",
    "prefix": "postcss --use autoprefixer -b \"last 5 versions\" css/style.concat.css -o css/style.prefix.css --no-map",
    "compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "remove": "rm css/style.comp.css css/style.concat.css css/style.prefix.css ",
    "build": "npm-run-all compile concat prefix compress remove"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Faralith/trillo.git"
  },
  "author": "Fred Shaw-Matthews",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Faralith/trillo/issues"
  },
  "homepage": "https://github.com/Faralith/trillo",
  "devDependencies": {
    "autoprefixer": "^9.7.5",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
